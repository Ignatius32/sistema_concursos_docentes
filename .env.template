# Existing Flask configuration
SECRET_KEY=your-secret-key-here
DATABASE_URI=sqlite:///concursos.db
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Google Drive Configuration
GOOGLE_DRIVE_CVS_FOLDER_ID=your-google-drive-folder-id

# Keycloak Configuration
# Basic Keycloak settings
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=my-app-realm

# OIDC Client Configuration (for user authentication)
KEYCLOAK_CLIENT_ID=flask-client
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Admin API Configuration (for user management)
# Option 1: Using service account (recommended)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-client-secret

# Option 2: Using admin user credentials (alternative)
# KEYCLOAK_ADMIN_USERNAME=admin
# KEYCLOAK_ADMIN_PASSWORD=admin-password

# Application URLs (adjust ports and domains as needed)
KEYCLOAK_REDIRECT_URI=http://localhost:5000/oidc_callback
KEYCLOAK_POST_LOGOUT_REDIRECT_URI=http://localhost:5000/

# Role Configuration (customize role names if different in your Keycloak realm)
KEYCLOAK_ADMIN_ROLE=app_admin
KEYCLOAK_TRIBUNAL_ROLE=tribunal_member
