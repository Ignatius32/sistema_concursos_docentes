# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DATABASE_URI=sqlite:///concursos.db

# Google Drive Configuration
GOOGLE_DRIVE_CVS_FOLDER_ID=your-google-drive-folder-id
GOOGLE_DRIVE_SECURE_TOKEN=your-secure-token-here

# Keycloak Server Configuration
KEYCLOAK_SERVER_URL=https://huayca.crub.uncoma.edu.ar/auth
KEYCLOAK_REALM=master

# OIDC Client Configuration (for user authentication)
KEYCLOAK_CLIENT_ID=selecciones-docentes
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Keycloak Admin API Configuration (for user management)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=your-keycloak-admin-password

# Application URLs (update these to match your production domain)
KEYCLOAK_REDIRECT_URI=http://127.0.0.1:5000/auth/callback
KEYCLOAK_POST_LOGOUT_REDIRECT_URI=http://localhost:5000/

# Role Configuration
KEYCLOAK_ADMIN_ROLE=app_admin
KEYCLOAK_TRIBUNAL_ROLE=tribunal_member

# Legacy Admin User (for backward compatibility during transition)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123